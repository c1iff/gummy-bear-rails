<%= render "layouts/errors", :object => @product %>


  <%= form_for @product do |f| %>
  <%= f.text_field :name %>
  <%= f.label :name %>
  <%= f.text_field :description %>
  <%= f.label :description %>
  <%= f.text_field :features %>
  <%= f.label :features %>
  <%= f.text_field :part_number %>
  <%= f.label :part_number %>
  <div class="row">
    <div class="col m6">
      <%= f.text_field :cost %>
      <%= f.label :cost %>
    </div>
    <div class="col m6">
      <%= f.text_field :origin %>
      <%= f.label :origin %>
    </div>
  </div>
  <%= f.text_field :img_url %>
  <%= f.label :img_url %>
  <br>
  <br>
  <%= f.submit "Add Product", class: "btn" %>

<% end %>
