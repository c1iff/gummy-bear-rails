<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :features %>
  <%= f.text_field :features %>
  <%= f.label :part_number %>
  <%= f.text_field :part_number %>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
  <%= f.submit "Add Product", class: "btn" %>
<% end %>
